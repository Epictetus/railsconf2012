require 'fileutils'

require 'rubygems'
require 'json'
require 'rake'
require 'rspec/core/rake_task'

def fileutils_opts
  { verbose: true }
end

def data
  raw = File.read('data/sessions.json')
  data = JSON.parse(raw)
end

def output_dir
  'output'
end

task :default => :spec

RSpec::Core::RakeTask.new(:spec) do |t|
  t.rspec_opts = %w(-fs --color)
end

desc 'Open a console for interactive development'
task :console do
  system 'irb -I lib -r generator'
end

desc 'Clean up generated files'
task :clean do
  FileUtils.rm_rf(output_dir, fileutils_opts)
end

desc "Generate Markdown files in #{output_dir.inspect}"
task :generate do
  require_relative './lib/generator'

  g = Generator.new(output_dir, data)
  g.generate
end

desc "Generate index file in #{output_dir.inspect}"
task :index do
  require_relative './lib/indexer'

  i = Indexer.new(output_dir, data)
  i.generate
end
